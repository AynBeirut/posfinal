{
  "name": "odoo-pos",
  "version": "1.0.0",
  "description": "Portable Odoo Point of Sale System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.mycompany.pos",
    "productName": "My POS",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My POS"
    },
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "!resources/**/*"
    ]
  }
}
